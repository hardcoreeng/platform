{
  "name": "@anticrm/dev-server",
  "version": "0.4.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "heft build",
    "fast-build": "tsc --skipLibCheck",
    "test": "echo 'no tests'",
    "lint": "eslint src",
    "dev": "cross-env NODE_ENV=production && node -r ts-node/register ./src/index.ts",
    "gen": "cross-env NODE_ENV=production ts-node ./src/gen-data.ts",
    "gen-inspect": "cross-env NODE_ENV=production node --inspect -r ts-node/register ./src/gen-data.ts",
    "prof": "cross-env NODE_ENV=production node --prof -r ts-node/register ./src/gen-data.ts",
    "show": "node --prof-process --preprocess -j isolate*.log | flamebearer",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write src && eslint --fix src"
  },
  "author": "Anticrm Platform Contributors",
  "license": "EPL-2.0",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@types/jwt-simple": "^0.5.33",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/koa__cors": "^3.0.2",

    "@types/mongodb": "^3.6.18",

    "@anticrm/platform-rig": "^0.4.0",
    "@rushstack/heft-jest-plugin": "^0.1.42",
    "@rushstack/heft": "^0.41.7",
    "@types/heft-jest": "^1.0.2",
    "@types/browser-or-node": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint": "^7.25.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4",

    "ts-node": "^10.0.0",
    "@types/koa-logger": "~3.1.1"
  },
  "dependencies": {
    "@anticrm/accounts": "~0.4.0",
    "@koa/cors": "^3.1.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "mongodb": "^3.6.9",
    "@anticrm/rpc": "~0.4.1",
    "@anticrm/status": "~0.4.2",
    "@anticrm/server": "~0.4.0",
    "@anticrm/workspaces": "~0.4.0",
    "@anticrm/services": "~0.4.0",
    "@anticrm/mongo": "~0.4.0",
    "@anticrm/model-all": "~0.4.0",
    "@anticrm/recruiting-action": "~0.4.0",
    "@anticrm/calendar-action": "~0.4.0",
    "@anticrm/calendar-mappers": "~0.4.0",
    "@anticrm/recruiting-mappers": "~0.4.0",
    "@anticrm/notification-mappers": "~0.4.0",
    "koa-logger": "^3.2.1",
    "@anticrm/core": "~0.4.0",
    "@anticrm/model-dev": "~0.4.0"
  }
}
