{
  "name": "@anticrm/hr-build",
  "version": "0.4.0",
  "license": "EPL-2.0",
  "scripts": {
    "build-server": "esbuild ./src/server.ts --bundle --minify --outfile=./dist/server.js --platform=node --log-level=error",
    "build": "rm -rf ./dist && cross-env NODE_ENV=production webpack && rushx build-server",
    "build-dev": "rm -rf ./dist && cross-env NODE_ENV=development webpack && rushx build-server",
    "dev": "webpack serve --content-base public",
    "compose": "DOCKER_BUILDKIT=1 docker compose build",
    "docker": "DOCKER_BUILDKIT=1 docker build . -t anticrm/hr-build",
    "docker-run": "docker run -p 8080:8080 anticrm/hr-front",
    "analyze": "cross-env NODE_ENV=production webpack --json > stats.json",
    "show": "webpack-bundle-analyzer stats.json dist",
    "test": "echo 'no tests'",
    "lint": "eslint --max-warnings=0 src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write --plugin-search-dir=. src/**/*.ts && eslint --fix src"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "webpack-cli": "^4.6.0",
    "webpack": "^5.32.0",
    "mini-css-extract-plugin": "^1.4.1",
    "dotenv-webpack": "^7.0.2",
    "ts-loader": "^8.1.0",
    "svelte-loader": "^3.1.0",
    "css-loader": "^5.2.1",
    "webpack-dev-server": "^3.11.2",
    "style-loader": "^2.0.0",
    "file-loader": "^6.2.0",
    "sass-loader": "^11.0.1",
    "@types/node": "^14.14.40",
    "webpack-bundle-analyzer": "^4.4.1",
    "svgo-loader": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.2.1",
    "copy-webpack-plugin": "~9.0.1"
  },
  "dependencies": {
    "@anticrm/platform": "~0.4.2",
    "@anticrm/ui": "~0.4.1",
    "svelte": "^3.37.0",
    "@anticrm/login": "~0.4.0",
    "@anticrm/login-impl": "~0.4.0",
    "@anticrm/workbench": "~0.4.0",
    "@anticrm/workbench-assets": "~0.4.0",
    "@anticrm/workbench-impl": "~0.4.1",
    "@anticrm/theme": "~0.4.1",
    "@anticrm/plugin-core": "~0.4.0",
    "@anticrm/plugin-core-dev": "~0.4.0",
    "@anticrm/chunter": "~0.4.0",
    "@anticrm/chunter-assets": "~0.4.0",
    "@anticrm/chunter-impl": "~0.4.0",
    "@anticrm/task": "~0.4.0",
    "@anticrm/task-assets": "~0.4.0",
    "@anticrm/task-impl": "~0.4.0",
    "@anticrm/plugin-core-impl": "~0.4.0",
    "autoprefixer": "~10.2.6",
    "@anticrm/ui-assets": "~0.4.0",
    "@anticrm/recruiting-assets": "~0.4.0",
    "@anticrm/recruiting-impl": "~0.4.0",
    "@anticrm/fsm-impl": "~0.4.0",
    "@anticrm/recruiting": "~0.4.0",
    "@anticrm/fsm": "~0.4.0",
    "@anticrm/login-assets": "~0.4.0",
    "@anticrm/services": "~0.4.0",
    "@anticrm/server": "~0.4.0",
    "@anticrm/server-tools": "~0.4.0"
  }
}
